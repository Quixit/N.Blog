{
    "name": "N.Blog.API",
    "license": "GPL3",
    "version": "0.0.1",
    "author": "Jonathan Bruce",
    "description": "Backend API for N.Blog platform.",
    "private": true,
    "scripts": {
        "seed": "node ./build/seed.js",
        "build": "tsc",
        "debug": "tsc && node ./build/api/bin/start.js",
        "start": "node ./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"npm run debug || exit 1\""
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "debug": "^4.1.1",
        "express": "^4.17.1",
        "method-override": "^3.0.x",
        "mongoose": "^5.10.4",
        "nconf": "^0.10.0",
        "npm": "^6.14.8",
        "oauth2orize": "^1.0.x",
        "passport": "^0.4.0",
        "passport-http": "^0.3.0",
        "passport-http-bearer": "^1.0.x",
        "passport-oauth2-client-password": "^0.1.x",
        "winston": "^3.3.3"
    },
    "jshintConfig": {
        "curly": true,
        "eqeqeq": true,
        "immed": true,
        "latedef": false,
        "newcap": false,
        "noarg": true,
        "sub": true,
        "undef": true,
        "boss": true,
        "eqnull": true,
        "strict": false,
        "scripturl": true,
        "evil": true,
        "globals": {
            "location": true,
            "printStackTrace": false
        },
        "browser": true,
        "node": true
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.8",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.7",
        "@types/debug": "^4.1.5",
        "@types/method-override": "0.0.31",
        "@types/mongoose": "^5.7.36",
        "@types/nconf": "^0.10.0",
        "@types/oauth2orize": "^1.8.8",
        "@types/passport": "^1.0.4",
        "@types/passport-http": "^0.3.8",
        "@types/passport-http-bearer": "^1.0.35",
        "@types/passport-oauth2-client-password": "^0.1.2",
        "nodemon": "^2.0.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    }
}
