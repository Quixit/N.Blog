{
    "name": "N.Blog.API",
    "license": "GPL3",
    "version": "0.0.1",
    "author": "Jonathan Bruce",
    "description": "Backend API for N.Blog platform.",
    "private": true,
    "scripts": {
        "seed": "tsc && node ./build/api/seed.js",
        "build": "tsc",
        "debug": "tsc && node ./build/api/bin/start.js",
        "start": "node ./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"npm run debug || exit 1\""
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.1",
        "method-override": "^3.0.0",
        "mongoose": "^6.4.6",
        "nconf": "^0.12.0",
        "oauth2orize": "^1.11.1",
        "passport": "^0.6.0",
        "passport-http": "^0.3.0",
        "passport-http-bearer": "^1.0.1",
        "passport-oauth2-client-password": "^0.1.2",
        "string-width": "^5.1.2",
        "winston": "^3.7.2",
        "yargs": "^17.5.1"
    },
    "jshintConfig": {
        "curly": true,
        "eqeqeq": true,
        "immed": true,
        "latedef": false,
        "newcap": false,
        "noarg": true,
        "sub": true,
        "undef": true,
        "boss": true,
        "eqnull": true,
        "strict": false,
        "scripturl": true,
        "evil": true,
        "globals": {
            "location": true,
            "printStackTrace": false
        },
        "browser": true,
        "node": true
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.7",
        "@types/debug": "^4.1.5",
        "@types/express": "^4.17.8",
        "@types/method-override": "0.0.32",
        "@types/nconf": "^0.10.0",
        "@types/oauth2orize": "^1.8.8",
        "@types/passport": "^1.0.4",
        "@types/passport-http": "^0.3.8",
        "@types/passport-http-bearer": "^1.0.35",
        "@types/passport-oauth2-client-password": "^0.1.2",
        "nodemon": "^2.0.20",
        "ts-node": "^10.8.1",
        "typescript": "^4.0.3"
    }
}
